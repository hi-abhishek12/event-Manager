<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">

  <!-- Profile Header -->
  <div class="container py-5">
    <div class="text-center mb-4">
      <img src="https://via.placeholder.com/120" class="rounded-circle shadow" alt="Profile Picture">
      <h2 class="mt-3 fw-bold"> Abhi</h2>
      <p class="text-muted">Web Developer Student</p>
    </div>

    <!-- Tabs for Profile & Settings -->
    <ul class="nav nav-tabs justify-content-center mb-4" id="profileTab" role="tablist">
      <li class="nav-item">
        <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile"
          type="button" role="tab">Profile</button>
      </li>
      <li class="nav-item">
        <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings"
          type="button" role="tab">Settings</button>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="profileTabContent">

      <!-- Profile Tab -->
      <div class="tab-pane fade show active" id="profile" role="tabpanel">
        <div class="card shadow-sm rounded-4">
          <div class="card-body">
            <h5 class="card-title">Profile Information</h5>
            <p><strong>Name:</strong> Abhi </p>
            <p><strong>Email:</strong> abhi@example.com</p>
            <p><strong>Bio:</strong> I'm passionate about web development and love to learn new things every day!</p>
          </div>
        </div>
      </div>

      <!-- Settings Tab -->
      <div class="tab-pane fade" id="settings" role="tabpanel">
        <div class="card shadow-sm rounded-4">
          <div class="card-body">
            <h5 class="card-title mb-3">Edit Profile Settings</h5>

            <form>
              <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="name" value="Abhi Bhai">
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" value="abhi@example.com">
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">New Password</label>
                <input type="password" class="form-control" id="password" placeholder="Enter new password">
              </div>

              <div class="mb-3">
                <label for="bio" class="form-label">Short Bio</label>
                <textarea class="form-control" id="bio" rows="3">I'm passionate about web development...</textarea>
              </div>

              <button type="submit" class="btn btn-primary w-100">Save Changes</button>
            </form>

          </div>
        </div>
      </div>

    </div>
  </div>

</body>
</html>
