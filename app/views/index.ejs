<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>

    <link rel="stylesheet" href="/css/style.css">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container-fluid p-3 overflow-hidden shadow">
      <div class="row">
        <div class="col-6 d-flex align-items-center justify-content-around">
          <h1 class="d-inline-block fw-semibold fs-3">Event</h1>
          <!-- <img src="NexEvent.png" class="logo"> -->
          <input
            class="w-100 w-md-50 d-inline-block rounded-pill px-4 py-2 input-style"
            type="text"
            placeholder="🔍 Search events, categories..."
          />
        </div>

        <div class="d-flex justify-content-around align-items-center col-4">
          <a
            href="createEvent.ejs"
            class="text-decoration-none text-body nav-links"
            >Create Event</a
          >
          <a
            href="dashboard.ejs"
            class="text-decoration-none text-body nav-links"
            >Dashboard</a
          >
          <a href="#" class="text-decoration-none text-body nav-links"
            >Teahnology</a
          >
        </div>

        <div class="col-2 d-flex align-items-center justify-content-center">
          <button class="btn modern-btn login-btn mx-2">Login</button>
          <button class="btn modern-btn signup-btn">Sign up</button>
        </div>
      </div>
    </div>

    <!-- first Section -->

    <section>
      <div class="container mt-5">
        <div class="row">
          <div class="container py-5">
            <div class="row align-items-center">
              <div class="col-md-6 text-center text-md-start">
                <h1 class="display-5 fw-bold mb-3">
                  Seamless Events, Memorable Moments
                </h1>
                <p class="lead text-muted">
                  Plan, book, and manage events — all in one place. Simple,
                  fast, and stress-free.
                </p>
                <a
                  href="#events"
                  class="btn btn-primary rounded-pill px-4 py-2 mt-3"
                  >Explore Events</a
                >
              </div>
              <div class="col-md-6 text-center">
                <img
                  class="img-fluid heroImg"
                  src="/assets/heroImg.jpg"
                  alt="Event illustration"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Second Section -->

    <section class="px-4 py-5 rounded-5">
      <div class="container">
        <div class="row mb-4">
          <div class="col">
            <h1 class="text-center fw-bold text-dark mb-4">Upcoming Events</h1>
          </div>
        </div>

        <div class="row g-4">
          <!-- Event Card -->
          <% data.forEach((item) => { %>
          <div class="col-md-4">
            <div
              class="card shadow-sm border-0 rounded-4 h-100 custom-event-card"
            >
              <img
                src=""
                class="card-img-top rounded-top-4"
                alt="Event image"
              />
              <div class="card-body py-3 px-4">
                <h5 class="card-title fw-semibold mb-2"><%= item.title %></h5>
                <p class="card-text text-muted small">
                  
                </p>
                <a
                  href="#"
                  class="btn btn-outline-dark btn-sm w-100 rounded-pill mt-2"
                  >Book Now</a
                >
              </div>
            </div>
          </div>
          <% }); %>

          <!-- Copy this structure for other cards -->
        </div>
      </div>
    </section>

    <!-- Footer -->

    <footer class="bg-light text-dark pt-5 pb-3">
      <div class="container">
        <div class="row text-center text-md-start">
          <!-- About Section -->
          <div class="col-md-6 mb-4">
            <h5 class="">About</h5>
          </div>

          <!-- Contact Section -->
          <div class="col-md-6 mb-4">
            <h5 class="">Contact</h5>
            <ul class="list-unstyled text-muted">
              <li><i class="bi bi-envelope-fill me-2"></i>support@event.com</li>
              <li><i class="bi bi-telephone-fill me-2"></i>Phone no.</li>
              <li><i class="bi bi-geo-alt-fill me-2"></i>Punjab, India</li>
            </ul>
          </div>
        </div>

        <hr class="border-secondary" />

        <!-- Footer Bottom -->
        <div class="text-center text-muted small">
          &copy; 2025 eventManager. All rights reserved.
        </div>
      </div>
    </footer>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</html>
