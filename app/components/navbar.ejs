<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <div class="container-fluid p-3 overflow-hidden shadow bg-color-navbar">
  <div class="row">
    <div class="col-6 d-flex align-items-center justify-content-around">
      <h1 class="d-inline-block fw-semibold fs-3">Event</h1>
      <%#<img src="NexEvent.png" class="logo">%>

      <%- include('./input', {
        name: 'search',
        type: 'search',
        id: 'search',
        placeholder: '🔍 Search events, categories...',
        className: 'w-100 w-md-50 d-inline-block rounded-pill px-4 py-2 input-style',
        value : events.qs_search || ''
      }) %>
    </div>

    <div class="d-flex justify-content-around align-items-center col-4">
      <a href="/create-event" class="text-decoration-none text-body nav-links">Create Event</a>
      <a href="dashboard.ejs" class="text-decoration-none text-body nav-links">Dashboard</a>
      <a href="#" class="text-decoration-none text-body nav-links">Teahnology</a>
    </div>

    <div class="col-2 d-flex align-items-center justify-content-center">
      <a class="btn modern-btn login-btn mx-2" href="/login">Login</a>
      <a class="btn modern-btn signup-btn" href="/signup">Sign up</a>
      <a class="btn modern-btn btn-danger signup-btn" href="/logout">Logout</a>

    </div>
  </div>
</div>



</body>

<script>
document.getElementById('search').addEventListener('change', function () {
  const tb_search = this.value.trim();
  const curURL = '/search';
  const queryParams = tb_search ? '?search=' + encodeURIComponent(tb_search) : '';
  
  console.log("Redirecting to:", curURL + queryParams); // ✅ check in console
  window.location.href = curURL + queryParams; // ✅ this updates URL and hits backend
});
</script>

</html>
